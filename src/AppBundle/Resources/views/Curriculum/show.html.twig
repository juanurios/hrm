{% extends 'base.html.twig' %}

{% block body %}
    <h1>Curriculum</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ curriculum.id }}</td>
            </tr>
            <tr>
                <th>Education</th>
                <td>{{ curriculum.education }}</td>
            </tr>
            <tr>
                <th>Jobexperience</th>
                <td>{{ curriculum.jobExperience }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('curriculum_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('curriculum_edit', { 'id': curriculum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
